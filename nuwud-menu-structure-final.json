  "metaobjects": {
    "namespace": "custom",
    "fields": [
      {
        "key": "model_3d",
        "name": "3D Model",
        "type": "file_reference",
        "description": "GLB/GLTF file reference for 3D menu icon"
      },
      {
        "key": "video_preview",
        "name": "Video Preview",
        "type": "file_reference",
        "description": "Video file for hover preview"
      },
      {
        "key": "floating_text",
        "name": "Floating Text",
        "type": "multi_line_text_field",
        "description": "Text content for floating HUD elements"
      },
      {
        "key": "sound_effects",
        "name": "Sound Effects",
        "type": "file_reference",
        "description": "Audio file for hover/interaction sounds"
      },
      {
        "key": "floating_preview",
        "name": "Floating Preview",
        "type": "json",
        "description": "JSON configuration for FloatingPreview HUD"
      },
      {
        "key": "audio_hover",
        "name": "Audio Hover",
        "type": "file_reference",
        "description": "Audio whispers or hover effects"
      },
      {
        "key": "carousel_tooltip",
        "name": "Carousel Tooltip",
        "type": "single_line_text_field",
        "description": "Tooltip text for carousel items"
      }
    ]
  },

  "integration": {
    "contentManager": {
      "mapToShopifyProducts": true,
      "extractGLBFromMetafields": true,
      "fallbackModels": "/assets/models/defaults/"
    },
    "graphqlFragments": {
      "includeMetafields": true,
      "include3DModelFields": true
    },
    "carousel3D": {
      "enableProductMapping": true,
      "preserveTextGeometry": true,
      "greenRingToggle": true
    }
  }
